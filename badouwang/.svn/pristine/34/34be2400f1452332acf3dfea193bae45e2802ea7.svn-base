/*---------家教列表页----------*/
.body{margin:0;}
.pwid{width:1200px;margin:0 auto;}
.pwid .hotnav{height:30px;line-height:30px;border-bottom:2px solid #009170;color:#333;font-size:12px;}
.pwid .hotnav a{color:#333;}
.pwid .hotnav a:hover{ color:#00b38a;}
.p---------------------p{}
.pwid .ction{padding-top: 15px;}
.pwid .ction .content{padding:6px 0;overflow:hidden;}
.pwid .ction .content .way{float:left;color:#111;font-weight:normal;line-height:27px; font-size:14px;}
.pwid .ction .content .pui{float:left; font-style:normal;}
.pwid .ction .content .pui a{cursor:pointer;float:left;margin:3px 6px 1px 6px;padding:3px 3px;font-size:12px;color:#111; text-decoration:none;transition:background .4s ease-in-out;}
.pwid .ction .content .pui a:hover{color:#FFF;background:#00b38a;}
.pwid .ction .content .pui .all{color:#F30; margin:3px 6px 1px 6px;padding:3px 3px;/*border-bottom: 1px solid #F30;*/}
.pwid .ction .content .pui #gid{float:left;display:block;}
.p---------------------p{}
.pwid .roll{height:130px;padding:15px 0;position:relative;background:#eee;margin-top: 15px;}
.pwid .roll a{float:left;display:block;width:200px;height:130px;color:#333; overflow:hidden; position:relative; text-decoration:none;margin:0 6px;}
.pwid .roll a .ptli{width:100%;	height:100%;	background:url(../../images/home/bg.png);	color:#00b38a; position:absolute;top:130px;transition:top .2s ease-in-out;}
.pwid .roll a .ptli .tixq{margin:10px auto;border-radius:3px;padding:6px 10px;background:#009170; color:#FFF;width: 70px;font-size: 12px;text-align: center;}
.pwid .roll a .ptli .tils{margin:30px auto 0px auto; text-align:center;color:#FFF;font-weight:bold; font-size:14px;}
.pwid .roll a:hover .ptli{top:0;left:0;}
.pwid .roll .prev{width:40px;height:40px;float:left;cursor:pointer;margin:35px 5px 0 15px; background:url(../../images/home/arrw.png) 5px 5px;}
.pwid .roll .next{width:40px;height:40px;float:right;cursor:pointer;margin:35px 5px 0 15px; background:url(../../images/home/arrw.png) 35px 5px;}
.pwid .roll .prev:hover{background:url(../../images/home/arrw.png) 5px -27px; }
.pwid .roll .next:hover{background:url(../../images/home/arrw.png) 35px -27px; }

.pwid .roll #roll{margin-left:7px;overflow:hidden;width:1060px;height:130px;float:left;}

.p---------------------p{}
.pwid .list{width:870px;float:left;margin-top:10px;}
.pwid .list .sous{font-family: "微软雅黑";border-left: 4px solid #009170;text-indent: 10px;margin: 15px 0;overflow:hidden;font-size: 16px;}
.pwid .list .souswy{ border-bottom:1px solid #ddd;}
.pwid .list .sous .sz{color:#F03;}
.pwid .list .sous .jg{float:right;}
.pwid .list .sous .jg img{float:right;cursor:pointer;}
.pwid .list .tent {padding:25px 0;border-bottom:1px dashed #ddd;overflow:hidden;}
.ydio{ color:#F93;}
.pwid .list .tent .page {}
.pwid .list .tent .page a{color:#666;padding:3px 10px;}
.pwid .list .tent .page a:hover{color:#00b38a}
.pwid .list .tent .tentimg{float:left;padding-right:10px;}
.pwid .list .tent .ent{float:left;width:640px;}
.pwid .list .tent .ent .contitle{font-size:14px;font-weight:bold;display:block;cursor:pointer; margin-bottom:8px;color:#333;transition:color ease .3s}
.pwid .list .tent .ent .contitle:hover{color:#F93;}
.pwid .list .tent .ent .content{color:#555;font-size:12px;line-height:20px;height:40px;}
.pwid .list .tent .ent .time{font-size:12px; line-height:20px;}
.pwid .list .tent .right{float:right;width:80px;padding:0 5px;}
.pwid .list .tent .right .xs{color:#F03;font-size:14px; text-align:center;padding:5px 0; margin-bottom:10px;}
.pwid .list .tent .right .xx{padding:6px 8px;background:#009170;color:#FFF;border-radius:3px;box-shadow:2px 2px 5px #ccc; font-size:12px; text-align:center; display:block;transition:background .4s ease-in-out;}
.pwid .list .tent .right .xx:hover{background:#6c6;}
.pwid .list .tent .right .rd{color:#555;font-size:14px; text-align:center;padding:5px 0;}
.p---------------------p{}
.pwid .tising{float:right;width:285px;margin-top:10px;}
.pwid .tising .tisle{margin:12px 10px 12px 0;border-left:4px solid #009170;font-size:16px; font-family:"微软雅黑";text-indent:10px;}
.pwid .tising .tisbor{border-top:1px solid #ddd;}
.pwid .tising .tisgao{padding:15px 20px;}
.pwid .tising .tisgao .bot{padding:5px 0;color:#555;width:245px;height:16px;overflow:hidden;}
.pwid .tising .tisgao .tom{padding:5px 0;color:#f03;width:245px;height:16px;overflow:hidden;}
