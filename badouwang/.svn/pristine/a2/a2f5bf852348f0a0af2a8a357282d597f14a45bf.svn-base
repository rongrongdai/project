<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>广告管理</title>
<link href="__ROOT__/public/css/admin/other/style.css" rel="stylesheet" type="text/css" />
<link href="__ROOT__/public/css/admin/other/select.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="__ROOT__/public/js/jquery-min.js"></script>
<script type="text/javascript" src="__ROOT__/public/js/admin/other/jquery.idTabs.min.js"></script>
<script type="text/javascript" src="__ROOT__/public/js/admin/other/select-ui.min.js"></script>
<style>
    span{display:inline;}
</style>
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
        <li><a href="__APP__" target="_top">网站首页</a></li>
        <li><a href="#">广告管理</a></li>
        </ul>
    </div>
    
    <div class="formbody">
    <div id="usual1" class="usual"> 
        <div class="itab">
            <ul> 
                <li><a href="#tab2" class="selected">网站广告</a></li> 
                 
            </ul>
        </div> 
    
  	
  	<div id="tab2" class="tabson">
    
    
<!--    <ul class="seachform">
    
    <li><label>会员名</label><input name="" type="text" class="scinput" /></li>
    </li>
    <li><label>&nbsp;</label><input name="" type="button" class="scbtn" value="查询"/></li>
    
    </ul>-->
    
    
    <table class="tablelist">
    	<thead>
    	<tr>
        
        <th>序号</th><th>广告位名称</th><th>开始日期</th><th>广告期限</th><th>操作</th>
       
        </tr>
        </thead>
        <tbody>
        <foreach name='data' item='vo' key="i">
                    <tr>
                        <td><{$i+1+$limit}></td>
                        <td><{$vo.fid}></td>
                        <td><{$vo.begin_time}></td>
                        <td><{$vo.end_time}> 个月</td>
                        <td><a href="javascript:mod(<{$vo.id}>);">修改</a> | <a href="javascript:del(<{$vo.id}>);">删除</a></td>
                    </tr>
        </foreach>
        
        
    
        </tbody>
    </table>
      <{$link}>
   
  
    
    </div>  
       
	</div> 
 
	<script type="text/javascript"> 
      $("#usual1 ul").idTabs(); 
    </script>
    
    <script type="text/javascript">
	$('.tablelist tbody tr:odd').addClass('odd');
    </script>
    <script type="text/javascript">
        $(document).ready(function(e) {
            $(".select1").uedSelect({
                        width : 345			  
                });
                $(".select2").uedSelect({
                        width : 167  
                });
                $(".select3").uedSelect({
                        width : 100
                });
        });
    </script>
    <script>
    	function mod(id){
	        if(confirm('您确认编辑吗？')){
	            window.location.href="__URL__/addAd?id="+id;
	        }
	    }
	    function del(id){
	        if(confirm('您确认删除吗？删除后不可恢复')){
	            window.location.href="__URL__/delAd?id="+id;
	        }
	    }

</script>
    </div>
</body>

</html>














